 <div class="log">
    <h1>Add your lovely pet to your profile</h1>
    <%= simple_form_for([@user, @pet]) do |f| %>
    What's the name of this lovely pet?
    <%= f.input :name, label: false %>
    What's the species of this pet?
    <%= f.input :breed, collection: ["dog", "cat", "fish", "bird", "rabbit"]  %>
      <%# TO ADD A PICTURE OF YOUR PET f.input :photo, as: :file %>
    <div class="form-actions btn btn-ghost">

      <%= f.button :submit, "Add #{@pet.name}" , class: "btn btn-success"%>
    </div>
    <% end %>
  </div>
