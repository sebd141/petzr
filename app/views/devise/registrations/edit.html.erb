<div class="log">
    <h2>Edit My Profile</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: true,
                     wrapper_html: { class: 'forced-columns' } %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>

        <%= f.input :first_name,
                    hint: "How can we call you? :)",
                    required: false,
                    input_html: { autocomplete: "Your first name" },
                     wrapper_html: { class: 'forced-columns' } %>
        <%= f.input :last_name,
                    hint: "What is your last name :)",
                    required: false,
                    input_html: { autocomplete: "Your last name" },
                     wrapper_html: { class: 'forced-columns' } %>
        <%= f.input :password,
                    hint: "leave it blank if you don't want to change it",
                    required: false,
                    input_html: { autocomplete: "new-password" } ,
                     wrapper_html: { class: 'forced-columns' } %>
        <%= f.input :password_confirmation,
                    required: false,
                    input_html: { autocomplete: "new-password" } ,
                     wrapper_html: { class: 'forced-columns' } %>
        <%= f.input :current_password,
                    hint: "we need your current password to confirm your changes",
                    required: true,
                    input_html: { autocomplete: "current-password" } ,
                     wrapper_html: { class: 'forced-columns' } %>
        <%= f.input :photo, as: :file %>

          <% if current_user.pet_sitters_status == true  %>

          <%= f.input :pet_sitters_status,
                      :as => :boolean %>
          <%= f.input :location,
                            :size=>"40",
                            placeholder: 'Street number, street name, postal code, country',
                            input_html: { autocomplete: "your address" },
                            wrapper_html: { class: 'forced-columns' } %>
          <%= f.input :type_of_pet, collection: ["dog", "cat", "fish", "bird", "rabbit"], multiple: true, as: :check_boxes,
                     wrapper_html: { class: 'forced-columns' } %>
          <%= f.input :type_of_service, collection: ["walk", "feed", "wash"], multiple: true, as: :check_boxes ,
                     wrapper_html: { class: 'forced-columns' } %>
          <%= f.input :price,
                      hint: "What is your price per hour?",
                      required: false,
                      input_html: { autocomplete: "Your first name" },
                     wrapper_html: { class: 'forced-columns' } %>

                      <% else %>
            <% end %>
        </div>
      <div class="form-actions">
        <%= f.button :submit, "Update", class: "btn-green" %>
      </div>
      </div>

    <% end %>
</div>
